<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:id="@+id/divider6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000" />

            <View
                android:id="@+id/divider7"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:background="?android:attr/listDivider"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/accountTypeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="casual"
                android:gravity="center_horizontal"
                android:text="Account Type"
                android:textSize="20dp" />

            <Switch
                android:id="@+id/registerUserTypeSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ic_teacher_icon"
                android:drawableRight="@drawable/ic_student_icon"
                android:switchMinWidth="100dp"
                android:textOff="ADMIN"
                android:textOn="STUDENT" />

            <View
                android:id="@+id/divider8"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:visibility="invisible"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/fullNameRegisterTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="casual"
                android:gravity="center"
                android:text="Full Name"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/fullNameRegisterEditText"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_gravity="center"
                android:gravity="center"/>

            <View
                android:id="@+id/divider9"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:visibility="invisible"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/usernameRegisterTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="casual"
                android:gravity="center"
                android:text="Username"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/usernameRegisterEditText"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_gravity="center"
                android:gravity="center"/>

            <View
                android:id="@+id/divider10"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:visibility="invisible"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/passwordRegisterTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="casual"
                android:gravity="center"
                android:text="Password"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/passwordRegisterEditText"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:inputType="textPassword"
                android:gravity="center" />

            <View
                android:id="@+id/divider11"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:visibility="invisible"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/teachersListTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="casual"
                android:gravity="center"
                android:text="Homeroom Teacher"
                android:textSize="20sp"
                android:visibility="invisible" />

            <Spinner
                android:id="@+id/teacherListSpinner"
                android:layout_width="200dp"
                android:layout_height="49dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="invisible" />

            <View
                android:id="@+id/divider12"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:background="?android:attr/listDivider"
                android:visibility="invisible" />

            <Button
                android:id="@+id/registerButton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Create Account"
                android:layout_gravity="center"
                android:gravity="center"/>


        </LinearLayout>

    </ScrollView>


</LinearLayout>